{
    "manifest_version": 2,
    "name": "APT GitHub Improvements",
    "version": "0.3.0",

    "description": "Various improvements to GitHub for the Android Product Team (APT) at Mozilla",

    "options_ui": {
        "page": "dist/src/options.html",
        "browser_style": true
    },

    "content_scripts": [{
        "matches": ["*://*.github.com/*"],
        "js": ["dist/src/contentScript.js"]
    }],

    "permissions": [
        "*://bugzilla.mozilla.org/rest/*",
        "webRequest",
        "*://api.github.com/*",
        "webRequest",
        "storage"
    ]
}
