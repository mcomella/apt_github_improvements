{
    "compilerOptions": {
        "outFile": "./dist/src/content_script.js",
        "sourceMap": true,
        "removeComments": true,
        "allowJs": true, // for github_navigation

        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,

        "target": "es2017", // needed for Object.values.

        "types": [
            "firefox-webext-browser"
        ],
    },

    "include": [
        "./src/**/*ts",
        "./src/", // github_navigation must be last.
    ],
}
