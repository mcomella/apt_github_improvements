{
    "compilerOptions": {
        "outFile": "./src/dist/content_script.js",
        "sourceMap": true,
        "removeComments": true,
        "allowJs": true, // for github_navigation

        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,

        "target": "es2017", // needed for Object.values.
    },

    "include": [
        "./src",
        "./src/thirdparty/github_navigation/github_navigation.js",
    ],

    "exclude": [
        "./src/dist",
    ],
}
