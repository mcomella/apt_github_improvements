{
    "compilerOptions": {
        "outFile": "./src/dist/content_script.js",
        "sourceMap": true,
        "removeComments": true,
        "allowJs": true, // for github_navigation
        "alwaysStrict": true, // required for jasmine to support block-scoped declarations

        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,

        "target": "es2017",
    },

    "include": [
        "./typings",
        "./src/ts",
        "./src/github_navigation.js",
    ],
}
